load("@rules_foreign_cc//foreign_cc:configure.bzl", "configure_make")

filegroup(
    name = "all",
    srcs = glob(["**"]),
)

configure_make(
    name = "libunwind",
    configure_in_place = True,
    lib_source = ":all",
    args = ["-j"],
    copts = ["-fPIC"],
    visibility = ["//visibility:public"],
    configure_options = [
        "--disable-documentation",
        "--disable-minidebuginfo",
    ],
    deps = [
        "@zlib//:zlib",
    ],
)
